            //Task 13
            #region 
            string nxt, n_vyr_1 = "rectangle", n_vyr_2 = "circles", n_vyr_3 = "triangle", Ot;
            int Ot_n = 0;
            double str_A, str_B,dop;
            Ot = Console.ReadLine();
            while (Ot != "")
            {
                bool rslt = int.TryParse(Ot, out Ot_n);
                if (rslt)
                {
                    str_A = int.Parse(Console.ReadLine());
                    str_B = int.Parse(Console.ReadLine());
                    Console.WriteLine("Choose next step");
                    nxt = Console.ReadLine();
                    if (nxt == n_vyr_1)//pryamougolnick
                    {
                        S = str_A * str_B;
                        Console.WriteLine(S);
                    }
                    else if (nxt == n_vyr_2)//koltso
                    {
                        if(str_A > str_B)
                        {
                            S = (Math.PI * (Math.Pow(str_A, 2))) - (Math.PI * (Math.Pow(str_B, 2)));
                            Console.WriteLine(S);
                        }
                        else
                        {
                            S = (Math.PI * (Math.Pow(str_B, 2))) - (Math.PI * (Math.Pow(str_A, 2)));
                            Console.WriteLine(S);
                        }
                    }
                    else if (nxt== n_vyr_3)//treugolnick
                    {
                        dop = str_B;
                        S = str_A / 4 + (Math.Pow(4 * ((Math.Pow(str_B, 2)) - (Math.Pow(str_A, 2))), 0.5);
                        Console.WriteLine(S);
                    }
                    else
                    {
                        Console.WriteLine("impossible");
                    }
                }
                else
                {
                    Console.WriteLine("impossible");
                }
            }

            #endregion
