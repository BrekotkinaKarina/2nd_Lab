            //Task 11
            #region
            Console.WriteLine("How many students are gonna be in this class?");
            string stud = Console.ReadLine();
            int stud_n =0 , k = 0, s = 0 , m_1, m_2, m_3, m_4, s_st, nech=0;
            double fin;
            while (stud != "")
            {
                bool result_11 = int.TryParse(stud, out stud_n);
                if (result_11)
                {
                    for (k = 0; k <= stud_n; k++)
                    {
                        m_1 = int.Parse(Console.ReadLine());
                        m_2 = int.Parse(Console.ReadLine());
                        m_3 = int.Parse(Console.ReadLine());
                        m_4 = int.Parse(Console.ReadLine());
                        s_st = m_1 + m_2 + m_3 + m_4;
                        s = s + s_st;
                        if (s_st < 16)
                        {
                            nech = nech + 1;//количество неуспевающих 
                        }
                    }
                    fin = s / stud_n;
                    Console.WriteLine("The average score of the group - " + fin);
                    Console.WriteLine("The number of students with problems in academic performance - " + nech);
                }
                else
                {
                    Console.WriteLine("Sorry, we can't count now");
                }

            }
           
            #endregion

            //Task 12 
            #region
            Console.WriteLine("Choose your figure among fig_1, fig_2, fig_3");
            string fig_1 = "Circle", fig_2 = "triangle", fig_3 = "square",figr,fug;
            figr = Console.ReadLine();
            double str = double.Parse(Console.ReadLine());
            int raz, bv =0;
            double stor, S;
            int fug_n =0;
            fug = Console.ReadLine();
            while (fug != "")
            {
                figr = Console.ReadLine();
                if (figr == fig_1)
                {

                    Console.WriteLine("Let's gooooooooooo!");
                    fug = Console.ReadLine();
                    bool lt = int.TryParse(fug, out fug_n);
                    if (lt)
                    {
                        stor = double.Parse(Console.ReadLine());
                        S = Math.PI * (Math.Pow(stor, 2));
                        Console.WriteLine(S);
                    }
                    else
                    {
                        Console.WriteLine("impossible");
                    }
                }
                else if (figr == fig_2)//vtoraya
                {
                    fug = Console.ReadLine();
                    bool lt = int.TryParse(fug, out fug_n);
                    if (lt)
                    {
                        stor = double.Parse(Console.ReadLine());
                        S = ((Math.Pow(3, 1 / 2)) * (Math.Pow(stor, 2))) / 4;
                        Console.WriteLine(S);
                    }
                    else
                    {
                        Console.WriteLine("impossible");
                    }
                }
                else if (figr == fig_3) //tretiya
                {
                    Console.WriteLine("Let's gooooooooooo!");
                    fug = Console.ReadLine();
                    bool lt = int.TryParse(fug, out fug_n);
                    if (lt)
                    {
                        stor = double.Parse(Console.ReadLine());
                        S = Math.PI * (Math.Pow(stor, 2));
                        Console.WriteLine(S);
                    }
                    else
                    {
                        Console.WriteLine("impossible");
                    }
                }
            }
