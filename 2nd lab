            int nn, ii=0;
            double res_1, res_2 = 2000;
            nn = int.Parse(Console.ReadLine());
            if (nn > 0)
            {
                for (ii=0; ii <= nn; ii = ii + 1)
                {
                    res_1 = double.Parse(Console.ReadLine());
                    if (res_1 < res_2)
                    {
                        res_2 = res_1;
                    }
                }
                Console.WriteLine("The best result -  " + res_2);
            }
            else
